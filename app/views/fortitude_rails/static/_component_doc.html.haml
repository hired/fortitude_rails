- puts "local_assigns: #{local_assigns}"
- name = local_assigns[:name] || local_assigns
- title = local_assigns[:title] || "TODO: document #{name}"
- description = local_assigns[:description] || ""
- code_sample = local_assigns[:code_sample] || ""

.layout__item><
  %h2.text-black-light.xs-beta.xs-inset2= title
  %hr.text-gray-light
  %p.xs-ptb1.xs-delta= description
  %pre
    %code.scss
      = code_sample

- if block_given?
  .layout__item.xs-mt1
    %h3.xs-gamma.xs-mbh0.xs-mb1 Example
    = yield
