<% FortitudeRails.breakpoint_names.each do |size| %>

@mixin <%= size %>-none {
  display: none;
}

@mixin <%= size %>-inline {
  display: inline;
}

@mixin <%= size %>-inline-block {
  display: inline-block;
}

@mixin <%= size %>-block {
  display: block;
}

@mixin <%= size %>-table {
  display: table;
}

@mixin <%= size %>-table-cell {
  display: table-cell;
}

@mixin <%= size %>-table-column {
  display: table-column;
}

@mixin <%= size %>-inherit {
  display: inherit;
}

<% end %>
