<% FortitudeRails.breakpoint_names.each do |size| %>

<% (0..FortitudeRails.number_of_columns).each do |grid_unit| %>

@mixin <%= size %>-pt<%= grid_unit %> {
  @include breakpoint(<%= size %>) {
    padding-top: fortitude-grid-unit(<%=grid_unit%>);
  }
}

@mixin <%= size %>-ptb<%= grid_unit %> {
  @include breakpoint(<%= size %>) {
    padding-top: fortitude-grid-unit(<%=grid_unit%>);
    padding-bottom: fortitude-grid-unit(<%=grid_unit%>);
  }
}

@mixin <%= size %>-pth<%= grid_unit %> {
  @include breakpoint(<%= size %>) {
    padding-top: fortitude-grid-unit(<%=grid_unit%>) + fortitude-halve(<%= grid_unit %>);;
  }
}

@mixin <%= size %>-ptbh<%= grid_unit %> {
  @include breakpoint(<%= size %>) {
    padding-top: fortitude-grid-unit(<%=grid_unit%>);
    padding-bottom: fortitude-grid-unit(<%=grid_unit%>) + fortitude-halve(<%= grid_unit %>);;
  }
}

