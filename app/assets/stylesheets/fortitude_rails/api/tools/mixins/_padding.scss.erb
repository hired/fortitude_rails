  @include breakpoint(<%= size %>) {
    padding-bottom: fortitude-grid-unit(<%=grid_unit%>);
  }
}

@mixin <%= size %>-pbh<%= grid_unit %> {
  @include breakpoint(<%= size %>) {
    padding-bottom: fortitude-grid-unit(<%=grid_unit%>) + fortitude-halve(<%= grid_unit %>);;
  }
}

@mixin <%= size %>-pr<%= grid_unit %> {
  @include breakpoint(<%= size %>) {
    padding-right: fortitude-grid-unit(<%=grid_unit%>);
  }
}

@mixin <%= size %>-prl<%= grid_unit %> {
  @include breakpoint(<%= size %>) {
    padding-right: fortitude-grid-unit(<%=grid_unit%>);
    padding-left: fortitude-grid-unit(<%=grid_unit%>);
  }
}

@mixin <%= size %>-prh<%= grid_unit %> {
  @include breakpoint(<%= size %>) {
    padding-right: fortitude-grid-unit(<%=grid_unit%>) + fortitude-halve(<%= grid_unit %>);;
  }
