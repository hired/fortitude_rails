  @include breakpoint(<%= size %>) {
    padding: fortitude-grid-unit(<%= grid_unit %>);
  }
}
@mixin <%= size %>-ph<%= grid_unit %> {
  @include breakpoint(<%= size %>) {
    padding: fortitude-grid-unit(<%= grid_unit %>) + fortitude-halve(<%= grid_unit %>);
  }
}

<% end %>

