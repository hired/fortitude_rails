<% FortitudeRails.breakpoint_names.each do |size| %>

<% (0..FortitudeRails.number_of_columns).each do |grid_unit| %>

<% [1, -1].each do |margin_direction| %>

<% grid_unit = grid_unit * margin_direction %>

@mixin <%= size %>-mt<%= grid_unit %> {
  @include breakpoint(<%= size %>) {
    margin-top: fortitude-grid-unit(<%=grid_unit%>);
  }
}

@mixin <%= size %>-mtb<%= grid_unit %> {
  @include breakpoint(<%= size %>) {
    margin-top: fortitude-grid-unit(<%=grid_unit%>);
    margin-bottom: fortitude-grid-unit(<%=grid_unit%>);
  }
}

@mixin <%= size %>-mth<%= grid_unit %> {
  @include breakpoint(<%= size %>) {
    margin-top: fortitude-grid-unit(<%=grid_unit%>) + fortitude-halve(<%= grid_unit %>);
  }
}

@mixin <%= size %>-mtbh<%= grid_unit %> {
  @include breakpoint(<%= size %>) {
    margin-top: fortitude-grid-unit(<%=grid_unit%>);
    margin-bottom: fortitude-grid-unit(<%=grid_unit%>) + fortitude-halve(<%= grid_unit %>);
  }
}

